<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="#F8F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/voucherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/voucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher description"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/voucherPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 coins"
            android:textColor="#8888E5"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/claimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F4811A"
            android:textColor="#FFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>